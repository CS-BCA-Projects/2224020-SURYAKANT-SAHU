<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

</head>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .right-container {
        background: white;
        border-top-right-radius: 15px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.4);
        border-bottom-right-radius: 22%;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        justify-content: center;
        width: 30%;
        height: 65%;
    }

    .left-container {
        background: #780606;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        border-bottom-left-radius: 15px;
        border-top-left-radius: 22%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        color: white;
        font-size: 40px;
        width: 30%;
        height: 65%;
    }

    h2 {
        margin-bottom: 10%;
        font-size: 200%;
    }

    input {
        width: 80%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        width: 80%;
        padding: 10px;
        background: rgb(10, 92, 10);
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 10PX;
    }

    button:hover {
        background: #05410a;
    }

    #message {
        margin-top: 30px;
        color: green;
    }

    a {
        display: block;
        margin-top: 10px;
        color: #007bff;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    select {
        width: 40%;
        height: 20%;
        margin-bottom: 10PX;
    }
</style>

<body>
    <div class="left-container">
        <i class="fa-solid fa-unlock" style="font-size: 200%; margin-bottom: 40px;"></i>
        <div style="display: flex;">Forgot Password</div>
    </div>
    <div class="right-container">
        <h2>Forgot Password</h2>

        <form id="forgotPasswordForm">
            <select id="userType">
                <option value="">SELECT USER TYPE</option>
                <option value="users">Donor</option>
                <option value="admin">Admin</option>
            </select>
            <p>Enter your email to receive a reset link.</p>

            <input type="email" id="email" placeholder="Enter your email" required>
            <button type="submit">Send Reset Link</button>
        </form>

        <p id="message"></p>
    </div>

    <script>
        document.getElementById("forgotPasswordForm").addEventListener("submit", async function (event) {
            event.preventDefault();

            const Email = document.getElementById("email").value;
            const userType = document.getElementById("userType").value; // Get user type
            const messageElement = document.getElementById("message");            
            if (!email) {
                messageElement.style.color = "red";
                messageElement.textContent = "Please enter your email.";
                return;
            }

            // Set the correct API endpoint based on user type
            const apiEndpoint = `http://localhost:5000/${userType}/forgot-password`;
            
            try {
                const response = await fetch(apiEndpoint, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ Email }),
                });

                const data = await response.json();
                
                if (response.ok) {
                    messageElement.style.color = "green";
                    messageElement.textContent = "Reset link sent! Check your email.";
                    if (userType === "admin") {
                        setTimeout(() => {
                            window.location.href = "/admin/login";
                        }, 5000);
                    } else {
                        setTimeout(() => {
                            window.location.href = "/users/login";
                        }, 5000);
                    }
                } else {
                    messageElement.style.color = "red";
                    messageElement.textContent = data.msg || "Error sending reset link.";
                }
            } catch (error) {
                console.error("Error:", error);
                messageElement.style.color = "red";
                messageElement.textContent = "Something went wrong. Try again later.";
            }
        });

    </script>
</body>


</html>