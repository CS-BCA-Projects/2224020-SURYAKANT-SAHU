            <div class="card green">New Comments <span>36</span></div>
            <div class="card yellow">New Visitors <span>87</span></div>
        </div>
        <section class="donation-info">
            <h3>Current Blood Donation Info</h3>
            <table>
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Status</th>
                        <th>Admin</th>
                        <th>Progress</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Wadah</td>
                        <td class="status pending">Pending</td>
                        <td>Esraa Mamdouh</td>
                        <td class="progress green"></td>
                    </tr>
                    <tr>
                        <td>Fatih Mohsen</td>
                        <td class="status pending">Pending</td>
                        <td>Esraa Mamdouh</td>
                        <td class="progress blue"></td>
                    </tr>
                    <tr>
                        <td>Disa Tourna</td>
                        <td class="status pending">Pending</td>
                        <td>Esraa Mamdouh</td>
                        <td class="progress orange"></td>
                    </tr>
                    <tr>
                        <td>Arwa Bahaa</td>
                        <td class="status pending">Pending</td>
                        <td>Esraa Mamdouh</td>
                        <td class="progress yellow"></td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>
    <script>
        /* script.js */
        document.querySelectorAll("nav ul li").forEach(item => {
            item.addEventListener("click", function () {
                document.querySelector("nav ul li.active").classList.remove("active");
                this.classList.add("active");
            });
        });
    </script>
</body>

</html>