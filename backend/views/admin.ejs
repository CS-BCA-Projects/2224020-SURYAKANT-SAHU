<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</head>

<body>
    <div class="sidebar">
        <div class="profile">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTEg09MmHvC-78aaRxyd52HabsZqI1-u8R6-w&s" alt="Admin Profile">
            <h3><%= user.FullName %></h3>
            <p><%= user.Email %></p>
        </div>
    </div>

    <div class="main-content" id="donor_container">
        <header>
            <h2>Dashboard</h2>

            <button id="logout_button">
                <i class="fas fa-sign-out-alt"></i> Logout
            </button>
        </header>

        <div class="cards"></div>

        <section class="donation-info">
            <h3>Current Blood Donation Info</h3>
            <table>
                <thead>
                    <tr style="color: white;">
                        <th>Name</th>
                        <th>Blood Group</th>
                        <th>Gender</th>
                        <th>Location</th>
                        <th>Contact</th>
                        <th>Profession</th>
                    </tr>
                </thead>
                <tbody>
                    <% donors.forEach(donor => { %>
                        <tr>
                            <td><%= donor.First_Name %> <%= donor.Last_Name  %></td>
                            <td><%= donor.BloodGroup %></td>
                            <td><%= donor.Gender %></td>
                            <td><%= donor.State %>, <%= donor.District %> <%= donor.Block %> <%= donor.Pincode %></td>
                            <td><%= donor.ContactNo %></td>
                            <td><%= donor.Profession %></td>
                            <td>
                            <% if (donor.status === 'pending') { %>
                              <form action="/admin/approve/<%= donor._id %>" method="POST" style="display:inline;">
                                <button type="submit">✅ Accept</button>
                              </form>
                              <form action="/admin/reject/<%= donor._id %>" method="POST" style="display:inline;">
                                <button type="submit">❌ Reject</button>
                              </form>
                            <% } else { %>
                              <%= donor.status %>
                            <% } %>
                          </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
    </div>

    <!-- Support Request Modal -->

    <script>
        document.getElementById("logout_button").addEventListener("click", async () => {
            try {
                const response = await fetch("/admin/logout", {
                    method: "POST",
                    credentials: "include"
                });

                const data = await response.json();
                if (response.ok) {
                    alert(data.msg);
                    window.location.href = "/admin/login";
                } else {
                    alert(`Error: ${data.error}`);
                }
            } catch (error) {
                alert("Logout failed. Please try again.");
                console.error("Logout error:", error);
            }
        });

    </script>


</body>

</html>
