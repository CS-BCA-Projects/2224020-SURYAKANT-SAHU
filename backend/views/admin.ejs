<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</head>

<body>
    <div class="sidebar">
        <div class="profile">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTEg09MmHvC-78aaRxyd52HabsZqI1-u8R6-w&s" alt="Admin Profile">
            <h3><%= user.FullName %></h3>
            <p><%= user.Email %></p>
        </div>
    </div>

    <div class="main-content" id="donor_container">
        <header>
            <h2>Dashboard</h2>
            <button id="verify_donors">
                Verify Donors
            </button>
            <button id="unverify_donors">
                 UnVerify Donors
            </button>
            <button id="logout_button">
                <i class="fas fa-sign-out-alt"></i> Logout
            </button>
        </header>

        <div class="cards"></div>

        <section class="donation-info">
            <h3>Current Blood Donation Info</h3>
            <table>
                <thead>
                    <tr style="color: white;" id = "donor-head">
                        <th>Name</th>
                        <th>Blood Group</th>
                        <th>Gender</th>
                        <th>Location</th>
                        <th>Contact</th>
                        <th>Profession</th>
                    </tr>
                </thead>
               <tbody id="donor_table_body">
    
                </tbody>

            </table>
        </section>
    </div>

    <!-- Support Request Modal -->

    <script>
      document.getElementById("logout_button").addEventListener("click", async () => {
            try {
                const response = await fetch("/admin/logout", {
                    method: "POST",
                    credentials: "include"
                });

                const data = await response.json();
                if (response.ok) {
                    alert(data.msg);
                    window.location.href = "/admin/login";
                } else {
                    alert(`Error: ${data.error}`);
                }
            } catch (error) {
                alert("Logout failed. Please try again.");
                console.error("Logout error:", error);
            }
        });

             async function fetchDonors(verified) {
        try {
            const donors = JSON.parse('<%- JSON.stringify(donors) %>');

            const tbody = document.getElementById("donor_table_body");
            tbody.innerHTML = "";

            if (donors.length === 0) {
                tbody.innerHTML = `<tr><td colspan="7">No donors found.</td></tr>`;
                return;
            }

            donors.forEach(donor => {
                const row = document.createElement("tr");
                const dhead = document.getElementById("donor-head");

                // If donor is unverified, add action buttons
                if (!verified && !donor.isVerifyed) {
                    row.innerHTML = `
                    <td>${donor.First_Name} ${donor.Last_Name}</td>
                    <td>${donor.BloodGroup}</td>
                    <td>${donor.Gender}</td>
                    <td>${donor.State}, ${donor.District}, ${donor.Block}, ${donor.Pincode}</td>
                    <td>${donor.ContactNo}</td>
                    <td>${donor.Profession}</td>
                `;
                    const actionTd = document.createElement("td");
                    actionTd.innerHTML = `
                        <button onclick="approveDonor('${donor._id}')">✅ Approve</button>
                        <button onclick="rejectDonor('${donor._id}')">❌ Reject</button>
                    `;
                    row.appendChild(actionTd);
                    dhead.appendChild(`<th>Actions</th>`);
                } 
                    if(verified && donor.isVerifyed){
                    row.innerHTML = `
                    <td>${donor.First_Name} ${donor.Last_Name}</td>
                    <td>${donor.BloodGroup}</td>
                    <td>${donor.Gender}</td>
                    <td>${donor.State}, ${donor.District}, ${donor.Block}, ${donor.Pincode}</td>
                    <td>${donor.ContactNo}</td>
                    <td>${donor.Profession}</td>
                `;
                }

                tbody.appendChild(row);
            });
        } catch (err) {
            console.error("Error loading donors:", err);
        }
    }

    async function approveDonor(donorId) {
        const res = await fetch(`/admin/donors/approve/${donorId}`, { method: "PATCH" });
        if (res.ok) fetchDonors(false); // refresh unverified list
    }

    async function rejectDonor(donorId) {
        const res = await fetch(`/admin/donors/reject/${donorId}`, { method: "DELETE" });
        if (res.ok) fetchDonors(false); // refresh unverified list
    }

    document.getElementById("verify_donors").addEventListener("click", () => fetchDonors(true));
    document.getElementById("unverify_donors").addEventListener("click", () => fetchDonors(false));

    // Load verified donors by default
    fetchDonors(true);   
    </script>

</body>

</html>
