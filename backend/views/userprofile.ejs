<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood Donation User Dashboard</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #d32f2f;
            color: white;
            position: fixed;
            padding-top: 20px;
        }
        .sidebar h2 {
            text-align: center;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
        }
        .sidebar ul li {
            padding: 15px;
            text-align: center;
        }
        .sidebar ul li a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: block;
        }
        .sidebar ul li:hover {
            background: #b71c1c;
        }
        .main-content {
            margin-left: 260px;
            padding: 20px;
        }
        .card {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        input, select, button {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
        button {
            background-color: #d32f2f;
            color: white;
            border: none;
            cursor: pointer;
        }
        button:hover {
            background-color: #b71c1c;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>Bloodlink.com</h2>
        <ul>
            <li><a href="../public/dregisterf.html">Donor Registeration Form</a></li>
            <li><a href="#profile">Profile</a></li>
            <li><a href="#profile">Edit Profile</a></li>
            <li><a href="#logout">Logout</a></li>
        </ul>
    </div>
    
    <div class="main-content">
        
        <section id="profile" class="card">
            <h2>Profile</h2>
            <div>
                <img src="" alt="pofile image">
                <p>Name: <span id="name">John Doe</span></p>
                <p>Blood Group: <span id="blood-group">A+</span></p>
            </div>
        </section>

        
    </div>
    
    <script>
        document.getElementById("appointment-form").addEventListener("submit", function(event) {
            event.preventDefault();
            const date = document.getElementById("date").value;
            document.getElementById("appointment-message").innerText = "Appointment booked for " + date;
        });
        
        document.getElementById("request-form").addEventListener("submit", function(event) {
            event.preventDefault();
            document.getElementById("request-message").innerText = "Blood request submitted successfully!";
        });
        
        function calculateNextDonation() {
            const lastDonationDate = new Date("2024-01-01");
            const nextDonationDate = new Date(lastDonationDate);
            nextDonationDate.setMonth(nextDonationDate.getMonth() + 3);
            document.getElementById("next-donation-date").innerText = nextDonationDate.toDateString();
        }
        
        calculateNextDonation();
    </script>
</body>
</html>
